})

(fun {*test-run-async-loop* aio ctx remaining} {
  (if (== (len remaining) 0)
    {ctx}
    {(*test-run-async-loop* aio (*test-run-async-one* aio ctx (head remaining)) (tail remaining))})
})

(fun {test/run-async aio & args} {
  do
    (= {parsed} (*test-async-parse-args* args))
    (= {tests} (head parsed))
    (= {config} (head (tail parsed)))
    (= {total} (len tests))

    (= {ctx} (*test-ctx-from-config* config))
    (= {suite-name} (plist/get ctx :suite-name))
    (= {expected-exit} (plist/get ctx :expected-exit))
    (= {timeout-ms} (plist/get ctx :timeout-ms))
    (= {suite-timeout-ms} (plist/get ctx :suite-timeout-ms))
    
    (if (== total 0)
      {do
        (printf "âŒ No async tests registered!\n")
        (if (== expected-exit 1)
          {(shutdown 0)}
          {(shutdown 1)})}
      {do
        (printf "ğŸ§ª [%ld/%ld] %s (async, timeout: %ldms/test, %ldms/suite)\n" total total suite-name timeout-ms suite-timeout-ms)

        ; Run tests sequentially via recursion
        (= {ctx} (*test-run-async-loop* aio ctx tests))

        (aio/stop aio)
        (*test-print-results-and-exit* ctx)})
})



