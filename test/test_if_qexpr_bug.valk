(load "src/prelude.valk")

(printf "Test 1: if true with single element qexpr\n")
(= {r1} (if 1 {42} {99}))
(printf "r1 = ")
(print r1)

(printf "\nTest 2: if true with multi-element qexpr\n")
(= {r2} (if 1 {(+ 1 2)} {99}))
(printf "r2 = ")
(print r2)

(printf "\nTest 3: if false with multi-element qexpr\n")
(= {r3} (if 0 {42} {(+ 10 20)}))
(printf "r3 = ")
(print r3)

(printf "\nTest 4: nested expression in qexpr\n")
(= {myfn} (\ {x} {(* x 2)}))
(= {r4} (if 1 {(myfn 5)} {0}))
(printf "r4 = ")
(print r4)
