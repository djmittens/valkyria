; Test that lambda bodies with multi-element qexprs work
; This should work without requiring extra parens

; Define fun macro
(def {fun} (\ {f b} {def (head f) (\ (tail f) b)}))

; Test 1: Simple function with implicit sexpr body
(fun {add x y} {+ x y})
(print "add 5 3:")
(print (add 5 3))

; Test 2: Function that calls another builtin
(fun {increment x} {+ x 1})
(print "increment 10:")
(print (increment 10))

; Test 3: Function with def inside body
(fun {compute x} {def {result} {+ x 10}} {result})
(print "compute 5:")
(print (compute 5))
