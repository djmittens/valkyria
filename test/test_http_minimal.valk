(test/define "http2/with-auth creates middleware"
  {do (def {mw} (http2/with-auth "Bearer token")) (!= mw ()) })

(test/define "http2/with-auth executes on request"
  {do
    (def {req} (http2/get "example.com"))
    (def {mw} (http2/with-auth "Bearer token"))
    (def {req2} (mw req))
    (!= req2 ())
