; test_delay_error.valk
; Tests that errors in aio/then continuations are handled properly (return 500)

(load "src/prelude.valk")
(load "src/modules/test.valk")

(def {aio} (aio/start))

(def {handler}
  (\ {req} {
    (= {path} (req/path req))
    (if (== path "/delay-error")
      {(aio/then (aio/sleep aio 50) (\ {_} {
        (error "Intentional error from delay continuation")
      }))}
      {`{:status "200" :body "OK"}}
    )
  }))

(def {server} (http2/server-listen aio 0 handler))
(def {test-port} (http2/server-port server))

(test/run-async aio (list
  (test-async "error in aio/then continuation returns 500" (\ {} {
  (aio/then (http2/client-request aio "127.0.0.1" test-port "/delay-error")
    (\ {resp} {
      (if (error? resp)
        {false}
        {(== (http2/response-status resp) "500")})
    }))
})))
  {:suite-name "Delay Error Path Tests"})
