(load "src/prelude.valk")

; Simplest possible nth
(fun {nth3 n _l} {
  if (== n 1)
    {fst _l}
    {nth3 (- n 1) (tail _l)}
})

(printf "Test nth3:\n")
(= {result} (nth3 1 {100 200 300}))
(printf "Result: %ld\n" result)

(printf "\nTest nth3 with index 2:\n")
(= {result2} (nth3 2 {100 200 300}))
(printf "Result: %ld\n" result2)

(shutdown 0)
