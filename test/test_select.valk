(load "src/prelude.valk")

(printf "Testing select:\n")

(= {result1} (select
  {(== 1 1) "one equals one"}
  {otherwise "not equal"}))
(printf "Result 1: %s\n" result1)

(= {result2} (select
  {(== 1 2) "one equals two"}
  {otherwise "not equal"}))
(printf "Result 2: %s\n" result2)

(printf "\nTesting select with numbers:\n")
(= {n} 1)
(= {result3} (select
  {(<= n 0) "negative or zero"}
  {(== n 1) "equals one"}
  {otherwise "greater than one"}))
(printf "Result 3: %s\n" result3)

(printf "\nTesting fst directly:\n")
(= {mylist} {10 20 30})
(= {fst-result} (fst mylist))
(printf "fst result: ")
(print fst-result)

(printf "\nTesting nth logic manually:\n")
(= {n} 3)
(= {_l} {10 20 30})
(printf "n=%ld, list=" n)
(print _l)
(printf "Condition (== n 1): %ld\n" (== n 1))
(= {manual-result} (nth n _l))
(print manual-result)
(printf "Should return fst of list\n")

(shutdown 0)
