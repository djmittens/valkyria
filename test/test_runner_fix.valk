; Test the test runner with the fixed head/tail functions
(load "src/prelude.valk")
(load "src/modules/test.valk")

; Define a few simple tests
(test/define "test-addition" {== (+ 1 2) 3})
(test/define "test-subtraction" {== (- 5 3) 2})
(test/define "test-multiplication" {== (* 4 3) 12})
