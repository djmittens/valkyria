; Test new lambda syntax without double parens
(def {fun} (\ {f b} {
  def (head f) (\ (tail f) b)
}))

; Test simple function with implicit sexpr body
(fun {add a b} {+ a b})
(print "Testing (add 10 20):")
(print (add 10 20))

; Test function with explicit sexpr (backward compatible)
(fun {mul a b} {(* a b)})
(print "Testing (mul 5 7):")
(print (mul 5 7))

; Test with do for multiple expressions
(fun {debug-add a b} {do (print "Adding:") (print a) (print b) (+ a b)})
(print "Testing debug-add:")
(print (debug-add 3 4))
