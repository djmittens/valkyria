  (test-async "sse/full rejects newlines in event-type" (\ {} {
  (aio/then (http2/client-request aio "127.0.0.1" TEST_PORT "/sse-full-invalid") (\ {resp} {}))
  (aio/schedule aio 300 (\ {} {
    true
  }))
}))
  (test-async "sse/comment sends comment" (\ {} {
  (aio/then (http2/client-request aio "127.0.0.1" TEST_PORT "/sse-comment") (\ {resp} {}))
  (aio/schedule aio 300 (\ {} {
    true
  }))
}))
  (test-async "sse/heartbeat sends heartbeat" (\ {} {
  (aio/then (http2/client-request aio "127.0.0.1" TEST_PORT "/sse-heartbeat") (\ {resp} {}))
  (aio/schedule aio 300 (\ {} {
