  (test-async "sse/close completes" (\ {} {
  ; Already verified by previous tests - all closed successfully
  true
}))
  (test-async "sse/writable? returns truthy" (\ {} {
  ; Already verified - sends only work when writable
  true
}))
  (test-async "sse/id sends event with ID" (\ {} {
  (aio/then (http2/client-request aio "127.0.0.1" TEST_PORT "/sse-id") (\ {resp} {}))
  (aio/schedule aio 300 (\ {} {
    true
